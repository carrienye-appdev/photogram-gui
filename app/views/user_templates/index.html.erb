<h1>List of Users</h1>

<form action="/insert_user">
<label for="user_box">Username</label>
<input id="user_box" name="query_user" placeholder="Enter a username...">

<button>Add user</button>

</form>

<hr>
<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Username
    </th>

    <th>
      
    </th>
  </tr>

  <% @list_of_users.each do |a_user|%>
    <tr>
      <td>
        <%= a_user.id %>
      </td>

      <td>
        <%= a_user.username %>
      </td>

      <td>
        <a href="/users/<%= a_user.username %>">
          Show Details
        </a>
      </td>
    </tr>
  <% end %>

</table>
</hr>
